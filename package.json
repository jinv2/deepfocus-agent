{
  "name": "deepfocus-agent",
  "version": "1.5.0",
  "license": "MIT",
  "author": "Shensi (https://shensist.top/)",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dist": "electron-builder"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.322.0",
    "next": "^14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.shensist.deepfocus",
    "productName": "DeepFocusAgent",
    "publish": [
      {
        "provider": "github",
        "owner": "jinv2",
        "repo": "deepfocus-agent"
      }
    ],
    "files": [
      "out/**/*",
      "main.js",
      "package.json"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    },
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
